@model NeverCore.Models.user

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div id="content" style="position:relative;right:-3000px">
    <h4>آیا از حذف اطلاعات اطمینان دارید؟</h4>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.id_bakhsh)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.id_bakhsh)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.u_fname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.u_fname)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.u_lname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.u_lname)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.u_code_meli)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.u_code_meli)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.u_email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.u_email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.u_username)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.u_username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.u_admin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.u_admin)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="id_user" />
            <input  type="submit" value="حذف اطلاعات" class="btn btn-outline-danger rounded-pill" onclick="move_back()"/>
            <a onclick="move_back()" class="btn btn-outline-primary rounded-pill" asp-action="Index">بازگشت به لیست</a>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(() => {
            $("#content").animate({ right: "0" });
            $(window).scrollTop($("#back").offset().top);
        });
    </script>
    <script>
        function move_back() {
            $("#form").submit(function (e) {
                e.preventDefault();
            });
            $("#content").animate({ right: "-3000" });
            $("#form").submit();
        }
    </script>
}
